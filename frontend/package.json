{
	"name": "prestige-frontend",
	"version": "0.0.1",
	"description": "Just an HTTP client, by Shrikant.",
	"author": "Shrikant Sharat Kandula <shrikantsharat.k@gmail.com>",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/sharat87/prestige/issues"
	},
	"homepage": "https://github.com/sharat87/prestige",
	"browserslist": [
		"last 2 Chrome versions",
		"last 2 Firefox versions",
		"last 2 Edge versions",
		"last 2 Safari versions"
	],
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "jsdom",
		"moduleNameMapper": {
			"^_/(.*)$": "<rootDir>/src/scripts/$1",
			"\\.css$": "<rootDir>/identity-proxy.js"
		},
		"collectCoverage": true
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es6": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"overrides": [
			{
				"files": [
					"src/tests/*.ts"
				],
				"rules": {
					"@typescript-eslint/no-non-null-assertion": "off"
				}
			}
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 11,
			"sourceType": "module",
			"project": "tsconfig.json"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"indent": [
				"error",
				"tab"
			],
			"no-tabs": [
				"error",
				{
					"allowIndentationTabs": true
				}
			],
			"max-len": [
				"error",
				{
					"code": 120,
					"tabWidth": 4,
					"ignoreComments": false,
					"ignoreTrailingComments": false,
					"ignoreStrings": false,
					"ignoreTemplateLiterals": false
				}
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"no-unused-vars": "off",
			"@typescript-eslint/no-unused-vars": "error",
			"no-unused-expressions": "off",
			"@typescript-eslint/no-unused-expressions": "error",
			"quotes": "off",
			"@typescript-eslint/quotes": [
				"error",
				"double",
				{
					"avoidEscape": true
				}
			],
			"semi": "off",
			"@typescript-eslint/semi": [
				"error",
				"never"
			],
			"comma-dangle": "off",
			"@typescript-eslint/comma-dangle": [
				"error",
				"always-multiline"
			],
			"capitalized-comments": "error",
			"eol-last": "error",
			"no-trailing-spaces": "error",
			"camelcase": "warn",
			"brace-style": "off",
			"@typescript-eslint/brace-style": [
				"error",
				"1tbs"
			],
			"object-curly-spacing": [
				"error",
				"always"
			],
			"curly": [
				"error",
				"all"
			],
			"eqeqeq": [
				"error",
				"always",
				{
					"null": "ignore"
				}
			],
			"no-shadow": "off",
			"@typescript-eslint/no-shadow": "error",
			"no-var": "error",
			"prefer-const": "error",
			"no-lonely-if": "error",
			"no-multiple-empty-lines": "error",
			"@typescript-eslint/no-for-in-array": "error",
			"func-call-spacing": "off",
			"@typescript-eslint/func-call-spacing": ["error"],
			"@typescript-eslint/no-base-to-string": [
				"error"
			],
			"@typescript-eslint/restrict-plus-operands": [
				"warn",
				{
					"checkCompoundAssignments": true
				}
			],
			"no-restricted-globals": [
				"error",
				"error",
				"name",
				"location",
				"length",
				"self",
				"stop",
				"focus",
				"close",
				"status",
				"origin",
				"top",
				"prompt",
				"onclick"
			]
		}
	},
	"alias": {
		"_": "./src/scripts"
	},
	"devDependencies": {
		"@babel/core": "^7.16.0",
		"@babel/preset-typescript": "^7.16.0",
		"@parcel/transformer-less": "2.0.1",
		"@types/codemirror": "5.60.5",
		"@types/jest": "^27.0.2",
		"@types/lodash": "^4.14.176",
		"@types/mithril": "^2.0.8",
		"@typescript-eslint/eslint-plugin": "^5.3.1",
		"@typescript-eslint/parser": "^5.3.1",
		"acorn": "^8.5.0",
		"babel-plugin-const-enum": "^1.2.0",
		"babel-preset-env": "^1.7.0",
		"codemirror": "^5.63.3",
		"eslint": "^8.2.0",
		"jest": "^27.3.1",
		"less": "^4.1.2",
		"lodash": "^4.17.21",
		"mithril": "^2.0.4",
		"parcel": "^2.0.0",
		"rollbar": "^2.24.0",
		"tachyons": "^4.12.0",
		"ts-jest": "^27.0.7",
		"ts-node": "^10.4.0",
		"typescript": "^4.4.4"
	},
	"dependencies": {}
}
